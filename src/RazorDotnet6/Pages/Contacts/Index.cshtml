@page
@model RazorDotnet6.Pages.Contacts.IndexModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Contact History</h1>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Contact
    </a>
</div>

@if (Model.Contacts?.Any() == true)
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Subject</th>
                            <th>Customer</th>
                            <th>Type</th>
                            <th>Contact Date</th>
                            <th>Contacted By</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model.Contacts)
                        {
                            <tr>
                                <td>
                                    <strong>@contact.Subject</strong>
                                    @if (!string.IsNullOrEmpty(contact.Description))
                                    {
                                        <br><small class="text-muted">@contact.Description</small>
                                    }
                                </td>
                                <td>@contact.Customer?.FullName</td>
                                <td><span class="badge bg-info">@contact.Type</span></td>
                                <td>@contact.ContactDate.ToString("MM/dd/yyyy")</td>
                                <td>@contact.ContactedBy</td>
                                <td>
                                    <span class="badge bg-@(contact.Status == "Completed" ? "success" : "warning")">
                                        @contact.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="Details" asp-route-id="@contact.Id" class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@contact.Id" class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        No contacts found. <a asp-page="Create">Record your first contact</a>.
    </div>
}