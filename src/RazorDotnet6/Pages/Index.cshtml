@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">CRM Dashboard</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Customers</h5>
                        <h2 class="mb-0">@Model.CustomerCount</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-people" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Customers/Index" class="text-white text-decoration-none">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Open Opportunities</h5>
                        <h2 class="mb-0">@Model.OpenOpportunityCount</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-graph-up" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Opportunities/Index" class="text-white text-decoration-none">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Recent Contacts</h5>
                        <h2 class="mb-0">@Model.RecentContactCount</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-telephone" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-page="/Contacts/Index" class="text-white text-decoration-none">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-dark mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Pipeline Value</h5>
                        <h2 class="mb-0">@Model.PipelineValue.ToString("C0")</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-currency-dollar" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <span class="text-muted">Total estimated value</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent Customers</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentCustomers?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Company</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.RecentCustomers)
                                {
                                    <tr>
                                        <td>@customer.FullName</td>
                                        <td>@customer.Email</td>
                                        <td>@customer.Company</td>
                                        <td>@customer.CreatedDate.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            <a asp-page="/Customers/Details" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No recent customers found.</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="/Customers/Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Customer
                    </a>
                    <a asp-page="/Opportunities/Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add New Opportunity
                    </a>
                    <a asp-page="/Contacts/Create" class="btn btn-info">
                        <i class="bi bi-plus-circle"></i> Add New Contact
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
