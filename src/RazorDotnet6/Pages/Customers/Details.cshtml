@page
@model RazorDotnet6.Pages.Customers.DetailsModel
@{
    ViewData["Title"] = "Customer Details";
}

@if (Model.Customer == null)
{
    <div class="alert alert-danger">
        Customer not found.
    </div>
    <a asp-page="Index" class="btn btn-primary">Back to Customers</a>
}
else
{
    <div class="d-flex align-items-center mb-4">
        <a asp-page="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i> Back to Customers
        </a>
        <h1 class="mb-0">@Model.Customer.FullName</h1>
        <div class="ms-auto">
            <a asp-page="Edit" asp-route-id="@Model.Customer.Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Customer Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Customer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @Model.Customer.FullName</p>
                            <p><strong>Email:</strong> @Model.Customer.Email</p>
                            <p><strong>Phone:</strong> @(Model.Customer.Phone ?? "Not provided")</p>
                            <p><strong>Company:</strong> @(Model.Customer.Company ?? "Not provided")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Job Title:</strong> @(Model.Customer.JobTitle ?? "Not provided")</p>
                            <p><strong>Status:</strong> 
                                <span class="badge bg-@(Model.Customer.Status == "Active" ? "success" : "secondary")">
                                    @Model.Customer.Status
                                </span>
                            </p>
                            <p><strong>Created:</strong> @Model.Customer.CreatedDate.ToString("MM/dd/yyyy")</p>
                            @if (Model.Customer.LastModifiedDate.HasValue)
                            {
                                <p><strong>Last Modified:</strong> @Model.Customer.LastModifiedDate.Value.ToString("MM/dd/yyyy")</p>
                            }
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Customer.Address))
                    {
                        <hr>
                        <p><strong>Address:</strong><br>
                        @Model.Customer.Address<br>
                        @Model.Customer.City, @Model.Customer.State @Model.Customer.PostalCode<br>
                        @Model.Customer.Country</p>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Customer.Notes))
                    {
                        <hr>
                        <p><strong>Notes:</strong></p>
                        <p class="text-muted">@Model.Customer.Notes</p>
                    }
                </div>
            </div>

            <!-- Opportunities -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Opportunities</h5>
                    <a asp-page="/Opportunities/Create" asp-route-customerId="@Model.Customer.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus"></i> Add Opportunity
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Customer.Opportunities?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Stage</th>
                                        <th>Value</th>
                                        <th>Probability</th>
                                        <th>Expected Close</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var opportunity in Model.Customer.Opportunities)
                                    {
                                        <tr>
                                            <td>@opportunity.Title</td>
                                            <td><span class="badge bg-primary">@opportunity.Stage</span></td>
                                            <td>@opportunity.EstimatedValue.ToString("C")</td>
                                            <td>@opportunity.Probability%</td>
                                            <td>@opportunity.ExpectedCloseDate.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                <a asp-page="/Opportunities/Details" asp-route-id="@opportunity.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No opportunities found.</p>
                    }
                </div>
            </div>

            <!-- Contacts -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-telephone"></i> Contact History</h5>
                    <a asp-page="/Contacts/Create" asp-route-customerId="@Model.Customer.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus"></i> Add Contact
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Customer.Contacts?.Any() == true)
                    {
                        @foreach (var contact in Model.Customer.Contacts.OrderByDescending(c => c.ContactDate))
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">@contact.Subject</h6>
                                        <p class="mb-1 text-muted">@contact.Description</p>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i> @contact.ContactDate.ToString("MM/dd/yyyy")
                                            @if (!string.IsNullOrEmpty(contact.ContactedBy))
                                            {
                                                <span> • <i class="bi bi-person"></i> @contact.ContactedBy</span>
                                            }
                                        </small>
                                    </div>
                                    <div>
                                        <span class="badge bg-info">@contact.Type</span>
                                        <span class="badge bg-@(contact.Status == "Completed" ? "success" : "warning")">@contact.Status</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No contact history found.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Stats</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">@(Model.Customer.Opportunities?.Count ?? 0)</h4>
                            <small class="text-muted">Opportunities</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-info">@(Model.Customer.Contacts?.Count ?? 0)</h4>
                            <small class="text-muted">Contacts</small>
                        </div>
                    </div>
                    <hr>
                    <div class="text-center">
                        <h5 class="text-success">@(Model.Customer.Opportunities?.Where(o => o.Status == "Open").Sum(o => o.EstimatedValue).ToString("C") ?? "$0")</h5>
                        <small class="text-muted">Pipeline Value</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}